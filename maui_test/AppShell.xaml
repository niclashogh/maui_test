<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="maui_test.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:maui_test.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="H-News">

    <ShellContent
        Title="All News"
        ContentTemplate="{DataTemplate pages:AllNewsPage}"
        Route="AllNewsPage" />

    <ShellContent
        Title="Trending"
        ContentTemplate="{DataTemplate pages:TrendingPage}"
        Route="TrendingPage" />

    <ShellContent
        Title="Filtered"
        ContentTemplate="{DataTemplate pages:FilteredNewsPage}"
        Route="FilteredNewsPage" />

</Shell>
